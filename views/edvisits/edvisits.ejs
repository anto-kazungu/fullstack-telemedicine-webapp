<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>ED Visits</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <% 
            content = `
                <h1>ED Visits</h1>
                <div class="add-btn">
                    <a type="button" href="/edvisits/add">Add New ED Visit</a>
                </div>
                <table border="1">
                    <tr>
                        <th>ED Visit ID</th>
                        <th>Visit ID</th>
                        <th>Patient ID</th>
                        <th>Acuity</th>
                        <th>Reason for Visit</th>
                        <th>ED Disposition</th>
                    </tr>
        
                    ${results.map(visit => `
                        <tr>
                            <td>${visit.ed_visit_id}</td>
                            <td>${visit.visit_id}</td>
                            <td>${visit.patient_id}</td>
                            <td>${visit.acuity}</td>
                            <td>${visit.reason_for_visit}</td>
                            <td>${visit.ed_disposition}</td>
                            <td>
                                <a href="/edvisits/edit/${visit.ed_visit_id}" class="edit-btn">Edit</a>
                                <form action="/edvisits/delete/${visit.ed_visit_id}" method="POST" style="display:inline;">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    `).join('')}
                </table>
            `;
        %>
        <%- include('../layout') %>
    </body>
</html>
