<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Visits</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <% 
            content = `
                <h1>Visits</h1>
                <div class="add-btn">
                    <a type="button" href="/visits/add">Add New Visit</a>
                </div>
                <table border="1">
                    <tr>
                        <th>Visit ID</th>
                        <th>Patient ID</th>
                        <th>Provider ID</th>
                        <th>Date of Visit</th>
                        <th>Date Scheduled</th>
                        <th>Visit Department ID</th>
                        <th>Visit Type</th>
                        <th>Blood Pressure (Systolic)</th>
                        <th>Blood Pressure (Diastolic)</th>
                        <th>Pulse</th>
                        <th>Visit Status</th>
                        <th>Actions</th>
                    </tr>
        
                    ${results.map(visit => `
                        <tr>
                            <td>${visit.visit_id}</td>
                            <td>${visit.patient_id}</td>
                            <td>${visit.provider_id}</td>
                            <td>${visit.date_of_visit}</td>
                            <td>${visit.date_scheduled}</td>
                            <td>${visit.visit_department_id}</td>
                            <td>${visit.visit_type}</td>
                            <td>${visit.blood_pressure_systolic}</td>
                            <td>${visit.blood_pressure_diastolic}</td>
                            <td>${visit.pulse}</td>
                            <td>${visit.visit_status}</td>
                            <td>
                                <a href="/visits/edit/${visit.visit_id}" class="edit-btn">Edit</a>
                                <form action="/visits/delete/${visit.visit_id}" method="POST" style="display:inline;">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    `).join('')}
                </table>
            `;
        %>
        <%- include('../layout') %>
    </body>
</html>
